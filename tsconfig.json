{
    "compilerOptions": {
        "baseUrl": ".",
        "declaration": true,
        "declarationMap": true,
        "esModuleInterop": true,
        "module": "CommonJS",
        "moduleResolution": "node",
        "outDir": "./dist",
        "paths": {
            "~/*": ["src/*"]
        },
        "skipLibCheck": true,
        "strict": true,
        "target": "ES2020"
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules", "**/*.test.ts"],
}
